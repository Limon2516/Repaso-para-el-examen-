# include <stdio.h>

int main (){
	FILE *archivo;
	
	archivo = fopen("archivo.txt", "w");
	
	if (archivo == NULL)
	{
		perror ("Error al crear el archivo");
		return 1;
	}
	
	//Ahora puedes escribir en el archivo
	fprintf(archivo, "Este es un nuevo archivo.\n");
	
	//Cierra el archivo despues de usarlo 
	fclose(archivo);
	
	return 0; 
}
