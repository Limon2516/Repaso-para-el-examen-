# include <stdio.h>

int main (){
	char caracter; 
	FILE *file = fopen("Ejercicio 3.pp", "rb");
	
	if (file == NULL)
	{
		perror("Error en la apertura del archivo");
		return 1;
	}
	
	while (feof(file) == 0)
	{
		caracter = fgetc(file);
		printf("%c", caracter);
	} 
	fclose(file);
	printf("\n\nTodo esta viendo en popa...\n\n\n\n");
	
	return 0;
}
